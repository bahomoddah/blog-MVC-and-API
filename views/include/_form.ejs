 <!-- form handling -->
 <form action="/api/articles" method="POST" id="add_article">
    <div class="new_article">
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="title" value="" placeholder="Learn Express">
        </div>
        <div class="form-group">
            <label for="author" class="text-light">Author</label>
            <input type="text" name="author" value="" placeholder="Mohammed">
        </div>
        <div class="form-group">
            <label for="content" class="text-light">Content</label>
            <input type="text" name="content" value="" placeholder="start...">
        </div>
        <div class="form-group">
            <label for="imgUrl" class="text-light">Image Url</label>
            <input type="text" name="imgUrl" value="" placeholder="http...">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>